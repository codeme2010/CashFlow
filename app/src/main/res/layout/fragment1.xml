<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <TableLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:stretchColumns="1">

    <TableRow>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:gravity="end|center_vertical"
            android:text="平台"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/et_平台"
            tools:text="陆金所"
            android:textSize="14sp"
            android:maxLines="1"
            android:inputType="text"
            android:imeOptions="actionNext"/>
    </TableRow>
    <TableRow>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:gravity="end|center_vertical"
            android:text="账户"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/et_账户"
            android:textSize="14sp"
            android:maxLines="1"
            android:inputType="text"
            android:imeOptions="actionNext" />
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:gravity="end|center_vertical"
            android:text="本金(元)"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_本金"
            android:textSize="14sp"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:imeOptions="actionNext"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:gravity="end|center_vertical"
            android:text="投资时间"
            />
        <com.shamanland.fonticon.FontIconEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_时间"
            android:textSize="14sp"
            app:iconRight="@xml/ic_right"
            android:maxLines="1"
            android:inputType="text"
            android:imeOptions="actionNext" />
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:gravity="end|center_vertical"
            android:text="锁定期(天)"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_锁定期"
            android:textSize="14sp"
            android:inputType="number"
            android:maxLines="1"
            android:imeOptions="actionNext"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:gravity="end|center_vertical"
            android:text="票利(%)"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_票利"
            android:textSize="14sp"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:imeOptions="actionNext" />
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:gravity="end|center_vertical"
            android:text="红包"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_红包"
            android:textSize="14sp"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:imeOptions="actionNext" />
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:gravity="end|center_vertical"
            android:text="返现"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_返现"
            android:textSize="14sp"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:imeOptions="actionNext" />
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:gravity="end|center_vertical"
            android:text="折合年化(%)"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_折合年化"
            android:textSize="14sp"
            android:focusable="false"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:gravity="end|center_vertical"
            android:text="备注"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_备注"
            android:textSize="14sp"
            android:maxLines="1"
            android:inputType="text"
            android:imeOptions="actionNext" />
    </TableRow>
    <Button
        android:text="记入"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/bt_记入" />
</TableLayout>
</ScrollView>